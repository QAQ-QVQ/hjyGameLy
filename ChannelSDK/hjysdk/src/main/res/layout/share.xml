<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_radius_top"
        android:visibility="gone"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/share_qq_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/share_qq"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_share_qq" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_qq"
                android:gravity="center"
                android:text="发送给好友"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share_wechat_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/share_wechat"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_share_wechat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_wechat"
                android:gravity="center"
                android:text="微信好友"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share_wxcircle_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/share_wxcircle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_share_friend" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_wxcircle"
                android:gravity="center"
                android:text="微信朋友圈"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share_sina_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/share_sina"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_share_sina" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_sina"
                android:gravity="center"
                android:text="新浪微博"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>