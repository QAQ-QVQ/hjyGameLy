<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/suspend_detail"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/sdk_white"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/goback"
        android:src="@drawable/img_back"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        android:paddingRight="8dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"/>
    <TextView
        android:id="@+id/detail_title"
        android:text="标题"
        android:textSize="18sp"
        android:textColor="@color/sdk_black"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detail_time"
        android:layout_below="@+id/detail_title"
        android:text="时间戳"
        android:textSize="14sp"
        android:textColor="@color/sdk_gray"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/detail_title"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            android:src="@drawable/img_vip_browse" />

        <TextView
            android:id="@+id/detail_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="555"
            android:textColor="@color/sdk_gray"
            android:textSize="12sp" />
    </LinearLayout>
        <TextView
            android:id="@+id/detail_content"
            android:layout_below="@+id/detail_time"
            android:text="游戏拥有战宠召唤、激斗BOSS爆神装、转生神翼、万人攻城等开放式玩法，迅速激起你的青春回忆！还等什么？快来和兄弟一起，一刀破晓，重铸霸业！"
            android:textSize="12sp"
            android:padding="16dp"
            android:textColor="@color/sdk_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>