<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/goback"
            android:src="@drawable/img_back"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/sdk_theme"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#fff"
            android:text="忘记密码"/>

    </RelativeLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#e7e7e7"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/change_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_weight="6"
                android:background="@null"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789_"
                android:hint="请输入密保手机号"
                android:maxLength="15"
                android:maxLines="1"
                android:singleLine="true" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e7e7"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/change_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:layout_weight="6"
                android:background="@null"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789_"
                android:hint="请输入手机验证码"
                android:maxLength="15"
                android:maxLines="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_getCode"
                android:layout_width="0dp"
                android:text="获取验证码"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="@drawable/shape_login_register"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e7e7"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="46dp"
            >
            <EditText
                android:id="@+id/change_password"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789_"
                android:layout_height="match_parent"
                android:hint="请输入新密码"
                android:textSize="14sp"
                android:password="true"
                android:maxLines="1"
                android:singleLine="true"
                android:background="@null"
                android:maxLength="15"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e7e7"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="46dp">

            <EditText
                android:id="@+id/second_password"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789_"
                android:layout_height="match_parent"
                android:hint="再次确认密码"
                android:textSize="14sp"
                android:password="true"
                android:maxLines="1"
                android:singleLine="true"
                android:background="@null"
                android:maxLength="15"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e7e7"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/reset_password"
        android:layout_width="120dp"
        android:text="重置密码"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:background="@drawable/shape_login_register"
        android:gravity="center"
        android:layout_height="35dp" />

</LinearLayout>
</RelativeLayout>