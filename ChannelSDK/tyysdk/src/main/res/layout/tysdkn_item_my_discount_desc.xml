<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/tysdkn_bg_yuanjiao_2"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tysdkn_rl_my_coupon_bg"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:background="@drawable/tysdkn_green_discount_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tysdkn_tv_my_coupon_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="100"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tysdkn_tv_my_coupon_value_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@id/tysdkn_tv_my_coupon_value"
                android:text="￥"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tysdkn_tv_my_coupon_value_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/tysdkn_tv_my_coupon_value"
                android:text="%"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tysdkn_tv_my_coupon_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tysdkn_tv_my_coupon_value"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="充值任意金额"
                android:textColor="@android:color/white"
                android:textSize="8sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tysdkn_tv_my_coupon_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="优惠券名称"
                android:textColor="#ffffff"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tysdkn_tv_my_coupon_conten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="优惠券详情"
                android:textColor="#FF999999"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tysdkn_tv_my_coupon_expired_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="有效期："
                android:textColor="#FF999999"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>