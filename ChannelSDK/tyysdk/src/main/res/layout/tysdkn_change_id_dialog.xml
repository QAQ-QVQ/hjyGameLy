<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tysdkn_pay_item"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="5dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tysdkn_dialog_warn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="添加小号"
        android:textColor="#111111"
        android:textSize="18sp" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tysdkn_dialog_warn_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加小号"
        android:textColor="#4366ff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tysdkn_dialog_warn_cancle"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/tysdkn_btn_dialog_cancle"
            android:gravity="center"
            android:text="取消"
            android:textColor="#111111"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tysdkn_dialog_warn_sure"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/tysdkn_btn_dialog_sure"
            android:gravity="center"
            android:text="发送"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
