<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ff1f2228">


        <ImageView
            android:id="@+id/tysdkn_choose_discount_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/tysdkn_recahrge_back_left" />

        <TextView
            android:id="@+id/tysdkn_tv_choose_coupon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择优惠券"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/tysdkn_progressbar" />

    <ListView
        android:id="@+id/tysdkn_lv_choose_discount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:divider="@null"
        android:scrollbars="none" />
</LinearLayout>