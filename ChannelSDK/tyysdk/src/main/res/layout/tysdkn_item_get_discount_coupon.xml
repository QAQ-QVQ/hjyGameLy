<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingLeft="6dp"
    android:clickable="false"
    android:paddingRight="6dp"
    android:paddingTop="3dp">

    <LinearLayout
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tysdkn_bg_yuanjiao_1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/tysdkn_rl_discount_bg"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:background="@drawable/tysdkn_green_discount_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="100"
                    android:textColor="@android:color/white"
                    android:id="@+id/tysdkn_tv_discount_value"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tysdkn_tv_value_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@id/tysdkn_tv_discount_value"
                    android:text="￥"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tysdkn_tv_value_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@id/tysdkn_tv_discount_value"
                    android:text="%"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tysdkn_tv_discount_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tysdkn_tv_discount_value"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:text="充值任意金额"
                    android:textColor="@android:color/white"
                    android:textSize="8sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tysdkn_tv_discount_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="优惠券名称"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tysdkn_tv_discount_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="优惠券描述"
                    android:textColor="#999999"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginRight="9dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tysdkn_tv_obtain"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:background="@drawable/tysdkn_button_yuanjiao_selector"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="领取"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:textSize="11sp" />
            <TextView
                tools:visibility="visible"
                android:visibility="gone"
                android:id="@+id/tysdkn_tv_get_condition"
                android:textColor="@android:color/white"
                android:layout_marginTop="7dp"
                android:layout_centerHorizontal="true"
                android:textSize="8sp"
                android:text="[ 限官方玩家 ]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>