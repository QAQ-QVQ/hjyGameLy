<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:layout_marginLeft="70dp"
                android:id="@+id/tysdkn_pull_icon"
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/tysdkn_pull_icon_big" />

            <ImageView
                android:id="@+id/tysdkn_refreshing_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dp"
                android:background="@drawable/tysdkn_refreshing"
                android:visibility="gone" />

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tysdkn_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下拉刷新"
                android:textColor="#999999"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/tysdkn_state_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/tysdkn_state_tv"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>