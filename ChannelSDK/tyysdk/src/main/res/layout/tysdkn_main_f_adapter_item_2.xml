<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ff1f2228"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="58dp"
        android:layout_height="56dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/tysdkn_main_f_item_iv"
            android:layout_width="58dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
             />

        <ImageView
            android:id="@+id/tysdkn_title_img_heard_gb"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:background="#7f495AFF"/>

        <ImageView
            android:id="@+id/tysdkn_main_f_item_red"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/tysdkn_red_p"
            tools:visibility="visible"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tysdkn_main_f_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:layout_marginTop="-10dp"
        android:maxLines="1"
        android:textColor="#111111"
        android:textSize="12sp"
        tools:text="消息"/>

    <View
        android:id="@+id/tysdkn_main_f_item_tag"
        android:layout_width="33dp"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:background="#ff353741" />
</LinearLayout>