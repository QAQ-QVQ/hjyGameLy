<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/x_bindphone_view"
    style="@style/x_common_horizontal_view" >

    <RelativeLayout
        style="@style/x_common_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/x_bindphone_des"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x_common_textsize_l" />
        
        
	       <LinearLayout
	           android:id="@+id/x_bindphone_close"
	           android:layout_alignParentRight="true"
	           android:layout_width="wrap_content"
	           android:layout_height="fill_parent"
	           android:orientation="horizontal" >
	
	           <ImageView
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_marginRight="16dp"
	               android:layout_gravity="center_vertical"
	               android:src="@drawable/x_r_close" />
	       </LinearLayout>        
          
        
    </RelativeLayout>

    <View
        style="@style/x_common_divide"
        android:layout_height="20dp" >
    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/x_common_inputbox"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/x_common_iphone"
                android:contentDescription="@string/x_bindphone_des"
                android:gravity="center" />

            <com.xxx.sdk.widgets.ExtendEditText
                android:id="@+id/x_bindphone_phonenum"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/x_common_hint_phonenumber"
                android:inputType="phone"
                android:maxLength="18"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/x_login_namepwd"
                android:textColorHint="@color/x_login_namepwd"
                android:textSize="@dimen/x_common_textsize_m" />

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:background="@drawable/x_common_vertical_divider"
                android:visibility="visible" >
            </View>

            <TextView
                android:id="@+id/x_bind_phone_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/x_register_phone_send"
                android:gravity="center_vertical"
                android:scaleType="fitCenter"
                android:text="@string/x_register_phone_send"
                android:textColor="@color/x_login_findpwd"
                android:textSize="@dimen/x_common_textsize_m"
                android:visibility="visible" />
        </LinearLayout>

        <View
            style="@style/x_common_divide"
            android:layout_height="15dp" >
        </View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/x_common_inputbox"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/x_common_verifycode"
                android:contentDescription="@string/x_register_user_des"
                android:gravity="center" />

            <com.xxx.sdk.widgets.ExtendEditText
                android:id="@+id/x_bind_phone_code"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:hint="@string/x_phonecode"
                android:inputType="number"
                android:maxLength="6"
                android:paddingEnd="0dp"
                android:paddingLeft="6dp"
                android:paddingRight="0dp"
                android:paddingStart="6dp"
                android:textColor="@color/x_login_namepwd"
                android:textColorHint="@color/x_login_namepwd"
                android:textSize="@dimen/x_common_textsize_m" />
        </LinearLayout>

        <View
            style="@style/x_common_divide"
            android:layout_height="15dp" >
        </View>

        <Button
            android:id="@+id/x_bindphone_go"
            style="@style/x_but_common"
            android:text="@string/x_bindphone_go" />
    </LinearLayout>

    <View
        style="@style/x_common_divide"
        android:layout_height="30dp" >
    </View>

</LinearLayout>