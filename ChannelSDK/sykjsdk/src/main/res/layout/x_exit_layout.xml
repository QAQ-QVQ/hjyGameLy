<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/x_corner_exit_bg"
        android:orientation="vertical" >

        <!-- 顶部椭园边缘 -->

	    <RelativeLayout
	        style="@style/x_common_title">
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:text="@string/x_exit_title"
	            android:textColor="@color/x_color_write_font"
	            android:textSize="@dimen/x_common_textsize_l" />
	    </RelativeLayout>
	
	    <View
	        style="@style/x_common_divide"
	        android:layout_height="10dp" >
	    </View> 

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <!--<ImageView-->
                <!--android:id="@+id/x_exit_image"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="120dp"-->
                <!--android:scaleType="centerInside" />-->
			<TextView
				android:id="@+id/x_exit_image"
				android:layout_width="wrap_content"
				android:layout_height="80dp"
				android:layout_marginTop="30dp"
				android:textSize="@dimen/x_common_textsize_l"
				android:text="@string/x_exit_confirm_msg"
				android:textColor="@color/x_color_black_font"
				/>
        </LinearLayout>
        
	    <View
	        style="@style/x_common_divide"
	        android:layout_height="10dp" >
	    </View>        

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/x_exit_cancel"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/x_corner_button"
                android:gravity="center"
                android:text="@string/x_exit_cancel"
                android:textColor="@color/x_color_write_font"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/x_exit_ok"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/x_c_corner_gray"
                android:gravity="center"
                android:text="@string/x_updatast"
                android:textColor="@color/x_color_red_font"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>
	    <View
	        style="@style/x_common_divide"
	        android:layout_height="10dp" >
	    </View>        
    </LinearLayout>

</RelativeLayout>