<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@drawable/loginsdk_bg_full_ffffff_r4"
    android:gravity="center"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号升级提示"
        android:textSize="18sp"
        android:textColor="@color/loginsdk_blue"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/loginsdk_icon_close"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textSize="15sp"
        android:text="辛苦练级，别丢失了账号，建议尽快升级账号"
        android:gravity="center"
        android:textColor="#333333"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/loginsdk_btn_height"
        android:layout_marginTop="50dp"
        android:text="立即升级"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:background="@drawable/loginsdk_bg_full_blue_r4"
        />
    <CheckBox
        android:id="@+id/cb_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/loginsdk_selector_checkbox"
        android:drawablePadding="3dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="今日不再提示"
        android:textSize="13sp"
        android:textColor="#333333"
        android:button="@null"
        />

        />


</LinearLayout>